{% extends "index.jinja" %}

<!-- muestra los elementos en carrito -->
{% for item in carrito %}
<table>
  <caption>
    Abarrotes "Los lunes"
  </caption>
  <tr>
    <th>ID</th>
    <th>Nombre</th>
    <th>Precio</th>
    <th>Opciones</th>
  </tr>
  <tr>
    <td>{{ item.id }}</td>
    <td>{{ item.nombre }}</td>
    <td>{{ '$' ~ item.precio }}</td>
    <td>
      <button>Eliminar</button>
      <button>Actualizar</button>
    </td>
  </tr>
</table>
<button>Agregar elemento</button>
{% else %}
<div>
  No hay elementos en base,
  <li>agrega uno</li>
</div>
{% endfor %}